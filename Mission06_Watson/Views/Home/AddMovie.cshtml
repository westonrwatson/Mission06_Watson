@model Mission06_Watson.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
}

<!-- Add Movie Form -->
<h1>Add a New Movie</h1>

<form asp-action="AddMovie" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Title Input -->
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required>
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Year Input -->
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" type="number" class="form-control" min="1888" max="2100" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director Input -->
    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" required />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Rating Dropdown -->
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Edited Checkbox -->
    <div class="mb-3 form-check">
        <input asp-for="Edited" type="checkbox" class="form-check-input" value="true" />
        <input type="hidden" name="Edited" value="false" /> <!-- Ensures unchecked boxes send false -->
        <label asp-for="Edited" class="form-check-label"></label>
    </div>

    <!-- Copied to Plex Checkbox -->
    <div class="mb-3 form-check">
        <input asp-for="CopiedToPlex" type="checkbox" class="form-check-input" value="true" />
        <input type="hidden" name="CopiedToPlex" value="false" /> <!-- Ensures unchecked boxes send false -->
        <label asp-for="CopiedToPlex" class="form-check-label"></label>
    </div>


    <!-- Lent To Input -->
    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <!-- Notes Input -->
    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>
